<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.project.mapper.BugMapper">


    <select id="getBugList" resultType="ExceptionEntity">
      SELECT
          *
      FROM t_sys_exception
     <where>
        <if test="userName != null and userName !=''">
            user_name like "%"#{userName}"%"
        </if>
         <if test="startTime!= null and endTime== null ">
             record_time &gt; #{startTime}
         </if>
         <if test="startTime == null and endTime != null">
             record_time &lt; #{endTime}
         </if>
         <if test="startTime != null and endTime != null">
             record_time between #{startTime} and #{endTime}
         </if>
         <if test="resolveFlag != null">
             resolve_flag = #{resolveFlag}
         </if>
     </where>

    </select>


</mapper>